{
	"name": "@surveyplanet/svelte-components",
	"description": "A collection of Svelte UI components",
	"keywords": [
		"svelte",
		"component",
		"avatar",
		"badge",
		"breadcrumbs",
		"button",
		"checkbox",
		"icon",
		"radio",
		"toggle"
	],
	"version": "0.0.8",
	"homepage": "https://ui.surveyplanet.com",
	"license": "MIT",
	"author": "Jonah Werre <jonahwerre@gmail.com> (https://github.com/jwerre)",
	"contributors": [
		"Ognjen Ugljenovic <ognjen@surveyplanet.com>"
	],
	"repository": {
		"type": "git",
		"url": "git@github.com:surveyplanet/svelte_components.git"
	},
	"scripts": {
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --use-new-transformation --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"clean": "rm -rf package coverage node_modules dist .svelte-kit && npm i",
		"clean:hard": "rm package-lock.json && npm run clean",
		"dev": "npm run story:dev",
		"format": "prettier --plugin-search-dir . --write .",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"lint:check": "eslint .",
		"package": "npm run build",
		"release": "semantic-release",
		"spell": "cspell",
		"test": "playwright test",
		"test:dev": "npm test -- --project=chromium",
		"test:ch": "npm test -- --headed --project=chromium",
		"test:ff": "npm test -- --headed --project=firefox",
		"test:wk": "npm test -- --headed --project=webkit",
		"test:edge": "npm test -- --headed --project=msedge",
		"test:all": "npm test -- --headed",
		"test:debug": "npm test -- --debug --headed --project=chromium",
		"test:ci": "npm test -- --project=chromium --reporter=github",
		"proof": "npm run check && npm run lint && npm run spell && npm run test",
		"story:dev": "histoire dev",
		"story:build": "histoire build",
		"story:preview": "histoire preview"
	},
	"devDependencies": {
		"@histoire/plugin-svelte": "^0.15.8",
		"@playwright/test": "^1.30.0",
		"@semantic-release/changelog": "^6.0.2",
		"@semantic-release/commit-analyzer": "^9.0.2",
		"@semantic-release/github": "^8.0.7",
		"@semantic-release/npm": "^9.0.2",
		"@semantic-release/release-notes-generator": "^10.0.3",
		"@surveyplanet/publish": "^1.0.1",
		"@surveyplanet/styles": "^0.1.7-25",
		"@sveltejs/adapter-auto": "^1.0.3",
		"@sveltejs/kit": "^1.8.3",
		"@sveltejs/package": "^1.0.2",
		"@types/cleave.js": "^1.4.7",
		"@typescript-eslint/eslint-plugin": "^5.51.0",
		"@typescript-eslint/parser": "^5.51.0",
		"concurrently": "^7.6.0",
		"cspell": "^6.22.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"histoire": "^0.15.8",
		"http-server": "^14.1.1",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remark-gfm": "^3.0.1",
		"sass": "^1.57.0",
		"svelte": "^3.55.1",
		"svelte-check": "^2.10.3",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"wait-on": "^7.0.1"
	},
	"type": "module",
	"dependencies": {
		"@surveyplanet/utilities": "^1.0.0-beta.5",
		"cleave.js": "^1.6.0"
	}
}
